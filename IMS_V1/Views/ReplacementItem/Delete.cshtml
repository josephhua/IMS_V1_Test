@model IMS_V1.ReplacementItem
<center>
    <div class="modal-header">
        @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>*@
        <h3 class="modal-title" id="myModalLabel">Delete Replacement Item</h3>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        <div class="modal-body">

            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <p style="color:red">Are you sure to delete this replacement item?</p>
                @Html.HiddenFor(model => model.ItmId)

                <div class="form-group">
                    <p style="color: black">Existing Item Number</p>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.existingItm_Num, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <p style="color: black">Replacement Code</p>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.replacementCode, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="modal-footer">
            <input class="btn btn-primary" type="submit" value="Delete" />
        </div>
        <br />
        <br />

    }

</center>
@Html.ActionLink("Back to Replacement List", "Index", new { id = Model.ItmId })